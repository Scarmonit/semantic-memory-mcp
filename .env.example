# Semantic Memory MCP Server - Environment Variables
# Copy this file to .env and update values as needed

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3325
HOST=0.0.0.0
NODE_ENV=development

# =============================================================================
# Database (PostgreSQL with pgvector)
# =============================================================================
DATABASE_URL=postgresql://localhost:5432/semantic_memory
DB_POOL_SIZE=10

# =============================================================================
# Ollama Embeddings
# =============================================================================
OLLAMA_URL=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSION=768

# =============================================================================
# Hybrid Search Configuration
# =============================================================================
SEMANTIC_WEIGHT=0.8          # Weight for semantic similarity (0-1)
RECENCY_WEIGHT=0.2           # Weight for recency score (0-1)
RECENCY_DECAY_DAYS=30        # Days for half-life decay
DEFAULT_IMPORTANCE=0.5       # Default importance for new memories
MAX_SEARCH_RESULTS=20        # Maximum results per search

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # Max requests per window

# =============================================================================
# Security (Optional)
# =============================================================================
API_KEY=                     # Optional: API key for authentication
